{
    "name": "Google Page Redder",
    "description": "Make all Google pages red",
    "version": "2.1",
    "permissions": [
        "activeTab",
        "tabs",
        "https://*.google.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Make all Google pages red"
    },
    "manifest_version": 2
}